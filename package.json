{
  "name": "auth-service",
  "version": "0.0.1",
  "description": "a service to authenticate and authorisation",
  "main": "index.js",
  "scripts": {
    "test": "ava --tap | tap-nyan",
    "testWithMock": "npm run mock & npm test",
    "compile": "babel index.js src -d build",
    "compile:watch": "babel index.js src --watch -d build",
    "start": "npm run compile:watch & nodemon --watch build build/index.js",
    "mock": "babel mock-service --watch -d mock-service-dist & nodemon --watch mock-service-dist ./mock-service-dist/user-service.js",
    "build": "babel index.js src -d dist && cp package.json dist/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tw-wee/auth-service.git"
  },
  "keywords": [
    "authentication",
    "&",
    "authorisation"
  ],
  "author": "koly",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tw-wee/auth-service/issues"
  },
  "homepage": "https://github.com/tw-wee/auth-service",
  "dependencies": {
    "bluebird": "^3.3.5",
    "express": "^4.13.4",
    "lodash": "^4.13.0",
    "redis": "^2.6.0-2",
    "superagent": "^1.8.3"
  },
  "devDependencies": {
    "ava": "^0.15.1",
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.6.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-cached": "^1.1.0",
    "gulp-concat": "^2.6.0",
    "gulp-nodemon": "^2.0.7",
    "gulp-sourcemaps": "^1.6.0",
    "nodemon": "^1.9.2",
    "tap-nyan": "0.0.2"
  },
  "ava": {
    "files": [
      "test/**/*.spec.js"
    ],
    "source": [
      "index.js",
      "src/**/*.js"
    ],
    "failFast": true,
    "tap": "tap-nyan",
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
